<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.josefgharib.mealcontrol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ACT.MainAct.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ACT.MainAct.MealDesPop"
            android:theme="@style/AppTheme.PopUpTheme">
        </activity>
        <activity android:name=".ACT.MainAct.MealAddPop"
            android:theme="@style/AppTheme.PopUpTheme">
        </activity>

        <activity android:name=".ACT.APIAct.NutritionDesPop"
            android:theme="@style/AppTheme.PopUpTheme">
        </activity>

        <activity android:name=".ACT.APIAct.APIActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
